{
  "htmlWhitespaceSensitivity": "ignore",
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": false,
  "bracketSpacing": true,
  "printWidth": 120,
  "useTabs": false,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "bracketSameLine": false,
  "arrowParens": "always",
  "overrides": [
    {
      "files": ["*.ts"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "*.md",
      "options": {
        "parser": "mdx"
      }
    },
    {
      "files": ".prettierrc",
      "options": {
        "parser": "json",
        "trailingComma": "all"
      }
    }
  ]
}
